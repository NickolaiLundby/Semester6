<Window x:Class="Lab42.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Check CPR number" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <Label Content="CPR nummer" Height="28" HorizontalAlignment="Left" Margin="17,28,0,0" Name="label1" VerticalAlignment="Top" />
        <TextBox HorizontalAlignment="Left" Margin="102,30,0,0" Name="tbxCprNr" VerticalAlignment="Top" Width="120" TextChanged="tbxCprNr_TextChanged" />
        <Button Content="Check"  HorizontalAlignment="Left" Margin="17,75,0,0" Name="btnCheckCpr" VerticalAlignment="Top" MinWidth="75" Click="btnCheckCpr_Click" IsDefault="True" />
        <TextBlock  HorizontalAlignment="Left" Margin="102,78,0,0" Name="tblErrorMsg" Text=" " VerticalAlignment="Top" MinWidth="120" />
    </Grid>
</Window>
